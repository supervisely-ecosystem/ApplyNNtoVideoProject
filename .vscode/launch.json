    "version": "0.2.0",
    "configurations": [
        {
            "name": "Uvicorn",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "src.main:g.app",
                "--host",
                "0.0.0.0",
                "--port",
                "8001",
                "--ws",
                "websockets",
                "--reload"
            ],
            "jinja": true,
            "justMyCode": false,
            "env": {
                "LOG_LEVEL": "DEBUG"
            }
        }
    ]
}